@model IEnumerable<Cardset>


<table class='table table-striped'>
    <tr>
        <th>Id</th>
        <th>Cardset Name</th>
        <th>Description</th>
        <th>Image</th>
        <th>Actions</th>
    </tr>
    @foreach (var cardset in Model)
    {
        <tr>
            <td>@cardset.CardSetId</td>
            <td>
                <a asp-controller="Cardset"
                    asp-action="Details"
                    asp-route-id="@cardset.CardSetId">@cardset.CardSetName</a>
            </td>
            <td>@cardset.Description</td>
            <td>
                @if (@cardset.ImageUrl != null)
                    {<img class="img-thumbnail" src="@cardset.ImageUrl" alt="Card image"/>}
            </td>
            <td>
                <a asp-controller="CardSet" asp-action="Edit" asp-route-id="@cardset.CardSetId">Edit</a>
                <a asp-controller="CardSet" asp-action="Delete" asp-route-id="@cardset.CardSetId">Delete</a>
            </td>
        </tr>
    }
</table>
<div class="d-flex justify-content-between">
    <a class="btn btn-primary"
        asp-controller="Cardset"
        asp-action="Create">Create new card set</a>
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Back to Home</a>
</div>

