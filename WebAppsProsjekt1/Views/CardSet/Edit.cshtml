@model Cardset



<div class="row justify-content-center">
    <div class="col-md-6">
        <h2>Edit Card set</h2>

        <form class="mt-4" asp-action="Edit">
            <input type="hidden" asp-for="CardSetId" />
            <div class="form-group">
                <label asp-for="CardSetName"></label>
                <input asp-for="CardSetName" class="form-control" />
                <span asp-validation-for="CardSetName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-between mt-4">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Table" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

