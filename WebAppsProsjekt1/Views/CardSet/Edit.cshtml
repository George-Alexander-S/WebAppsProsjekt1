@model Cardset

<h2>Edit Card set</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="CardSetId" />
    <div class="form-group">
        <label asp-for="CardSetName"></label>
        <input asp-for="CardSetName" class="form-control" />
        <span asp-validation-for="CardSetName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Table" class="btn btn-secondary">Cancel</a>
</form>

