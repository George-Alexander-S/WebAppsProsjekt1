@model Cardset

<body style="min-height: 92vh; display: flex; flex-direction: column">

<h1 style="text-align: center; margin-top: 30px; margin-bottom: 30px">
    @Model.CardSetName
</h1>

<div class="row gx-5">
    <img alt="@Model.CardSetName" src="@Model.ImageUrl" class="img-fluid col-5" />
    <div class="col-7">
        <h5>@Model.Description</h5>
        <p><a href="/CardSet/Table">Back to Table View</a></p>
    </div>
    <div class="m-2">
        <a class="btn btn-secondary"
           asp-controller="FlashCard"
           asp-action="CreateCard" asp-route-id="@Model.CardSetId">Create New flashcard</a>
        <a class="btn btn-secondary"
           asp-controller="FlashCard"
           asp-action="FlashCardTable" asp-route-id="@Model.CardSetId">Play this set!</a>
        <a class="btn btn-secondary"
           asp-controller="CardSet"
           asp-action="EditFlashcards" asp-route-id="@Model.CardSetId">Edit cards in this set</a>
    </div>
</div>
</body>

